extends layout

block content
  .container
    .page-header
      h1 Neuen Channel einrichten
    .row
      .col-md-8
        form(action, method='post')
          input(type="hidden", name="_csrf", value=csrfToken)
          .form-group.row
            label.control-label.col-sm-3 Die Anzahl der Spieler:
            .col-sm-9
              select.form-control(name='players')
                option 2
                option 3
                option 4
                option 5
                option 6
          .form-group.row
            label.control-label.col-sm-3 Spiel:
            .col-sm-9
              select.form-control(name='game')
                option 5 Gewinnt
                option Tic Tac Toe
                option Schiffe versenken
          .form-group.row
            label.control-label.col-sm-3 FÃ¼r jeden Spieler betretbar
            .col-sm-9
              select.form-control(name='public')
                option(value='true') Ja
                option(value='false') Nein
          .form-group.row
            .col-sm-offset-3.col-sm-9
              button.btn.btn-default(type='submit') Spiel beginnen
      .col-md-8